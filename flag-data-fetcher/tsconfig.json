{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".git"
  ]
}
